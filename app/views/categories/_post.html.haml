.debug
  = "Total Story.count: #{Story.count}"
  %hr
- @stories.each do |story|
  .debug
    = debug "long_url: #{story.long_url}, domain: #{story.domain}, score: #{story.score}, re: #{story.retweet}, fav: #{story.favorite}, length_original: #{story.content.length}, length_preview: #{story.content_preview.length}, on_topic: #{story.on_topic}, image: #{story.image}, token: #{story.token}, user_description: #{story.teller.description}"

  %div.blockElement
    .blockImage
      = raw story.image
    %div.row.blockContent
      %div.blockShare
        %span{"data-toggle" => "tooltip", "data-original-title" => story.teller.description}
          = link_to "@#{story.teller_realname}", "https://twitter.com/#{story.teller_username}/statuses/#{story.tweet_id}"
      %h3.blockTitle
        = story.title
      .blockSnippet
        = story.keywords
        = link_to "[Review]", edit_story_path(story)
      %div.blockMeta
        %span.blockSource
          =  "Read more at"
          = link_to story.domain, story.short_url
        %span.blockCount
          = "SHARED #{story.retweet}+TIMES"
        %span.blockTweet
          %i.fa.fa-twitter.blockIcon
    -# %br
    -# = raw story.content
    %div#collapse.row.collapse.panel-body
      = raw story.content_preview
