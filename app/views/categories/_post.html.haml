.debug
  = "Total Story.count: #{Story.count}"
  %hr
- @stories.each do |story|
  .debug
    = debug "long_url: #{story.long_url}, domain: #{story.domain}, score: #{story.score}, re: #{story.retweet}, fav: #{story.favorite}, length_original: #{story.content.length}, length_preview: #{story.content_preview.length}, on_topic: #{story.on_topic}, image: #{story.image}, token: #{story.token}, user_description: #{story.teller.description}"
  .row.post
    .post_lefthand.col-md-2
      .sharedby
        = link_to "@#{story.teller_realname}", "https://twitter.com/#{story.teller_username}/statuses/#{story.tweet_id}"
      .sharedby
        = "#{story.retweeters}"
      .sharedby
        = "and #{story.retweet}+"
    .content_trailer.col-md-8
      .contentTitle.row
        .col-md-11
          %span.content_title
            = story.title
        .col-md-1
      .content_keywords.row
        = story.keywords
        = link_to "[More]", "/stories/#{story.token}"
        = " | "
        = link_to "[Review]", edit_story_path(story)
      .content_details.row
        %span.sharecount
          = "Shared #{story.shared} times | "
        %span.commentcount
          = "48 comments"
    .post_righthand.col-md-2
      .content_title_img
        = raw story.image
      .source_primary
        = link_to "View Original#{' at ' + story.domain if not story.domain.nil?}", story.short_url
      -# .source_secondary
        .source_secondary_detail
          = "Washington Post"
        .source_secondary_detail
          = "New York Times"
        .source_secondary_detail
          = "TechCrunch"
  %hr
